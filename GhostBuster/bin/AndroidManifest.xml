<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ghostbuster"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="21" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ghostbuster"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity  android:name="com.example.UI.Gameview"  android:screenOrientation="landscape"></activity>
        <activity  android:name="com.example.UI.AboutView"  android:screenOrientation="portrait"></activity>
         <activity  android:name="com.example.UI.AchievementView"  android:screenOrientation="portrait"></activity>
          <activity  android:name="com.example.UI.ShareView"  android:screenOrientation="portrait"></activity>
         <activity    android:name="com.example.UI.RegisterView" android:screenOrientation="portrait"></activity>
          </application>

</manifest>
