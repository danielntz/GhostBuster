<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
      <ImageView       
                                            android:id="@+id/ghosteyes"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:background="@drawable/ghosteyes"/>
   
       <TextView 
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="Ghost  Buster"  
                         android:textColor="@color/gray"
                           android:textSize="40sp"
                          android:layout_marginTop="-40dip"
                           android:layout_gravity="center_horizontal"/>
    
    
       <RelativeLayout   
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                             >
              <ImageButton 
                                        android:id="@+id/play"
                                       android:layout_width="120dip"
                                       android:layout_height="wrap_content" 
                                       android:background="@drawable/button_change0"
                                       android:layout_marginLeft="100dip"
                                       android:layout_marginTop="20dip"/>
              <TextView    
                                     android:layout_width="wrap_content"
                                     android:layout_height="wrap_content"
                                     android:text="开始"
                                     android:textColor="@color/white"
                                     android:textSize="20sp"
                                     android:layout_marginLeft="160dip"
                                     android:layout_marginTop="29dip"/>
          
              </RelativeLayout>
          <RelativeLayout   
                                     android:layout_width="wrap_content"
                                     android:layout_height="wrap_content"
                                     >
                  <ImageButton   
                                        android:layout_width="120dip"
                                        android:id="@+id/share"
                                       android:layout_height="wrap_content" 
                                       android:background="@drawable/button_change1"
                                       android:layout_marginLeft="100dip"
                                       android:layout_marginTop="20dip"  />
                  <TextView    
                                     android:layout_width="wrap_content"
                                     android:layout_height="wrap_content"
                                     android:text="分享"
                                     android:textColor="@color/white"
                                     android:textSize="20sp"
                                     android:layout_marginLeft="160dip"
                                     android:layout_marginTop="29dip"/>
          </RelativeLayout>
           <RelativeLayout   
                                     android:layout_width="wrap_content"
                                     android:layout_height="wrap_content"
                                     >
                  <ImageButton   
                                        android:layout_width="120dip"
                                       android:layout_height="wrap_content" 
                                       android:id="@+id/achievement"
                                       android:background="@drawable/button_change2"
                                       android:layout_marginLeft="100dip"
                                       android:layout_marginTop="20dip"  />
                  <TextView    
                                     android:layout_width="wrap_content"
                                     android:layout_height="wrap_content"
                                     android:text="成就"
                                     android:textColor="@color/white"
                                     android:textSize="20sp"
                                     android:layout_marginLeft="160dip"
                                     android:layout_marginTop="29dip"/>
          </RelativeLayout>
          
             <RelativeLayout   
                                     android:layout_width="wrap_content"
                                     android:layout_height="wrap_content"
                                     >
                  <ImageButton   
                                        android:layout_width="120dip"
                                        android:id="@+id/about"
                                       android:layout_height="wrap_content" 
                                       android:background="@drawable/button_change3"
                                       android:layout_marginLeft="100dip"
                                       android:layout_marginTop="20dip"  />
                  <TextView    
                                     android:layout_width="wrap_content"
                                     android:layout_height="wrap_content"
                                     android:text="关于"
                                     android:textColor="@color/white"
                                     android:textSize="20sp"
                                     android:layout_marginLeft="160dip"
                                     android:layout_marginTop="29dip"/>
          </RelativeLayout>
          <RelativeLayout 
                                     android:layout_width="wrap_content"
                                     android:layout_height="wrap_content"
                                     >
             <ImageView   
                                             android:id="@+id/ghost"
                                             android:layout_width="wrap_content"
                                             android:layout_height="wrap_content"
                                             android:background="@drawable/ghost"
                                             android:layout_marginBottom="-60dip"
                                          android:layout_marginLeft="-50dip"/>
             
             <ImageButton   
                                          android:id="@+id/register"
                                          android:layout_width="wrap_content"
                                          android:layout_height="wrap_content"
                                          android:background="@drawable/button_change4"
                                          android:layout_toRightOf="@id/ghost"
                                          android:layout_marginTop="40dip"/>
             <TextView  
                                         android:layout_width="wrap_content"
                                          android:layout_height="wrap_content" 
                                          android:layout_toRightOf="@id/ghost"
                                          android:text="注册"
                                          android:textSize="20sp"
                                          android:layout_marginLeft="40dip"
                                      
                                          android:layout_marginTop="47dip"
                                          />
                                     
                                          </RelativeLayout>
</LinearLayout>
